@model JengApp.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<html>
    <head>
    </head>
    <body>
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
            <hr/>
            <div class= "card m-2 cb1" style="position:relative; display:inline-block;">
            <div class="row">
            <div class="cardform">
                <h2>@ViewData["Title"]</h2>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row mb-4">
                        <div class="col-sm-8">
                            <div class="form-group">
                                <label asp-for="Category" class="control-label"></label>
                                <select asp-for="Category" asp-items="ViewBag.categories" class="form-control"></select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input placeholder="Input product name" asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        
                    </div>

                    <div class="row">
                        <div class="col-sm-5">
                            <div class="form-group">
                                <label asp-for="Units" class="control-label"></label>
                                <input placeholder="Input units" asp-for="Units" class="form-control" />
                                <span asp-validation-for="Units" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-3">
                            <div class="form-group">
                            <label asp-for="Stock" class="control-label"></label>
                            <input placeholder="Input stocks" asp-for="Stock" class="form-control" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-4">
                            <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input placeholder="Set a price" asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label> <br>
                        <input type="checkbox" asp-for="Status" class="form-control-input" value="Active">
                        <label class="form-check-label" form="flexCheckChecked">Active</label>
                    </div>

                    <div class="form-group buttonDown">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
        </div>
    </body>
    <style>
       body{
            background-image: url('../bg pic.jpg');
            background-size: cover;
            background-position: center center;
            background-attachment: fixed;
            color: white;
           
        } 
         .card{
            position: center;
            width: 90%;
            max-width: 400px;
            padding: 5rem 2.5rem;
            
            border-radius: 1rem;
            border: 1px solid transparent;

            backdrop-filter: blur(1rem);
            box-shadow: 1.3rem 1.3rem 1.3rem (0,0,0,0.5);

            border-top-color: rgba(255,255,255,0.5);
            border-left-color: rgba(255,255,255,0.5);
            border-bottom-color: rgba(255,255,255,0.1);
            border-right-color: rgba(255,255,255,0.1);
        }

        .cb1{
            background-color: rgba(255,255,255,0.1);
        }
        .cb2{
            color: black;
            background: linear-gradient(to right bottom rgba(225,225,225,0.5),rgba(225,225,225,0.3))
        }
        .form-group{
            left: 100px;
        }
</style>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
